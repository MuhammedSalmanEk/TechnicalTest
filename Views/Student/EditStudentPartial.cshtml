<div class="modal fade" id="editFormModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editForm">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Edit Student</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="StudentKey" value="@Model.StudentKey" />
                    <div class="form-group mb-3">
                        <label for="StudentName">Student Name</label>
                        <input type="text" name="StudentName" id="StudentName" value="@Model.StudentName" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="SubjectKey">Subject</label>
                        <select name="SubjectKey" id="SubjectKey" class="form-select" required>
                            <option value="">-- Select Subject --</option>
                            @foreach (var subject in ViewBag.Subjects)
                            {
                                if (subject.SubjectKey == Model.SubjectKey)
                                {
                                    <option value="@subject.SubjectKey" selected>@subject.SubjectName</option>
                                }
                                else
                                {
                                    <option value="@subject.SubjectKey">@subject.SubjectName</option>
                                }
                            }
                        </select>

                    </div>

                    <div class="form-group mb-3">
                        <label for="StudentGrade">Student Grade</label>
                        <input type="number" name="Grade" id="StudentGrade" value="@Model.Grade" class="form-control" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
