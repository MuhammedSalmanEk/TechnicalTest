@model IEnumerable<StudentTest.Models.MstSubject>
<!-- Subjects Table -->
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Subject Key</th>
            <th>Subject Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var s in Model)
            {
                <tr data-id="@s.SubjectKey">
                    <td>@s.SubjectKey</td>
                    <td class="subject-name">@s.SubjectName</td>
                    <td>
                        <button class="btn btn-sm btn-primary edit-btn" data-id="@s.SubjectKey">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-danger delete-btn" data-id="@s.SubjectKey">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Student pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a href="#" class="page-link page-btn" data-page="@(ViewBag.CurrentPage - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a href="#" class="page-link page-btn" data-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a href="#" class="page-link page-btn" data-page="@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}


<script>$(document).on('click', '.page-btn', function (e) {
        e.preventDefault();
        const page = $(this).data('page');

        $.ajax({
            url: '/Subject/Index',
            type: 'GET',
            data: {
                page: page,
                search: $('input[name="search"]').val(),
            },
            headers: { "X-Requested-With": "XMLHttpRequest" },
            success: function (html) {
                $('#subjectTableContainer').html(html);
                $('html, body').animate({ scrollTop: 0 }, 200); // scroll to top of table
            },
            error: function () {
                showToast("Error loading students", "error");
            }
        });
    });</script>


<style>
    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .pagination .page-link {
        color: #0d6efd;
    }
</style>